@page "/calculator"

<PageTitle>[Super] Calculator</PageTitle>

<h1>Calculator</h1>

<div>
    <label>Number 1:</label>
    <input type="number" @bind="Numero1" />
</div>
<div>
    <label>Number 2:</label>
    <input type="number" @bind="Numero2" />
</div>
<div>
    <label>Operation:</label>
    <select @bind="Operaatiolel">
        <option value="+">Addition (+)</option>
        <option value="-">Subtraction (-)</option>
        <option value="*">Multiplication (*)</option>
        <option value="/">Division (/)</option>
        <option value="^">Power (^)</option>
        <option value="%">Modulo (%)</option>
    </select>
</div>




<button @onclick="Calculate">Calculate</button>

@if (Finaltulos.HasValue)
{
    <h3>Result: @Finaltulos</h3>
}

@code {
    private double? Numero1 { get; set; }
    private double? Numero2 { get; set; }
    private string Operaatiolel { get; set; } = "+";
    private double? Finaltulos { get; set; }

    private void Calculate()
    {
        if (Numero1.HasValue && Numero2.HasValue)
        {
            switch (Operaatiolel)
            {
                case "+":
                    Finaltulos = Numero1 + Numero2;
                    break;
                case "-":
                    Finaltulos = Numero1 - Numero2;
                    break;
                case "*":
                    Finaltulos = Numero1 * Numero2;
                    break;
                case "/":
                    if (Numero2 != 0)
                        Finaltulos = Numero1 / Numero2;
                    else
                        Finaltulos = null;
                    break;
                case "^":
                    Finaltulos = Math.Pow((double)Numero1, (double)Numero2);
                    break;
                case "%":
                    Finaltulos = Numero1 % Numero2;
                    break;
            }
        }
    }
}